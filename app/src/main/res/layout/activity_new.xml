<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margen_title"
        android:layout_marginBottom="@dimen/margen_title"
        android:textSize="@dimen/size_title"
        android:text="@string/factura_text"/>

    <TextView
        android:id="@+id/text_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margen_btn"
            android:layout_marginRight="@dimen/margen_btn"
            android:textSize="15dp"
            android:background="@color/c1"/>

        <TextView
            android:id="@+id/text_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margen_btn"
            android:background="@color/c2"/>

        <TextView
            android:id="@+id/text_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margen_btn"
            android:layout_marginBottom="@dimen/margen_btn"
            android:background="@color/c3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_p4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_btn"
            android:background="@color/c4"/>

        <TextView
            android:id="@+id/text_p5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/c5"/>

        <TextView
            android:id="@+id/text_p6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margen_btn"
            android:background="@color/c6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_p7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen_btn"
            android:layout_marginRight="@dimen/margen_btn"
            android:background="@color/c7"/>

        <TextView
            android:id="@+id/text_p8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen_btn"
            android:background="@color/c8"/>

        <TextView
            android:id="@+id/text_p9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen_btn"
            android:layout_marginLeft="@dimen/margen_btn"
            android:background="@color/c9"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_share"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_btn"
        android:background="@color/color_btn"
        android:text="@string/share_text"/>

</LinearLayout>